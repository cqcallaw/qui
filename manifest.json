{
	"name": "Islands",
	"version": "1.0",
	"description": "Trust management for distributed websites",
	"permissions": [
		"tabs",
		"activeTab",
		"declarativeContent",
		"storage",
		"webNavigation"
	],
	"background": {
		"scripts": [
			"main.js"
		],
		"persistent": false
	},
	"page_action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "images/get_started16.png",
			"32": "images/get_started32.png",
			"48": "images/get_started48.png",
			"128": "images/get_started128.png"
		}
	},
	"content_scripts": [
		{
			"matches": [
				"*://*.ipfs.localhost/*",
				"*://*.ipns.localhost/*"
			],
			"js": [
				"openpgp.js",
				"verify.js"
			]
		}
	],
	"icons": {
		"16": "images/get_started16.png",
		"32": "images/get_started32.png",
		"48": "images/get_started48.png",
		"128": "images/get_started128.png"
	},
	"manifest_version": 2
}