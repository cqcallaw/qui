{
	"name": "Islands",
	"version": "1.0",
	"description": "Trust management for distributed websites",
	"permissions": [
		"tabs",
		"activeTab",
		"declarativeContent",
		"storage",
		"webNavigation",
		"notifications",
		"*://*.ipfs.localhost/*",
		"*://*.ipns.localhost/*"
	],
	"background": {
		"scripts": [
			"openpgp.js",
			"main.js"
		],
		"persistent": false
	},
	"browser_action": {},
	"icons": {
		"16": "images/get_started16.png",
		"32": "images/get_started32.png",
		"48": "images/get_started48.png",
		"128": "images/get_started128.png"
	},
	"manifest_version": 2
}